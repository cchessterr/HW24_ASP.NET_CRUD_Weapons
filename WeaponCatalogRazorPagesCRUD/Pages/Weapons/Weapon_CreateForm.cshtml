@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WeaponCatalogRazorPagesCRUD.Pages.Weapons.Weapon_CreateFormModel
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Добавить оружие</title>
    <style>
        body {
            font-family: 'Georgia', serif;
            background-color: #121212;
            color: #e5e5e5;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            font-size: 2.8rem;
            margin: 20px 0;
            color: #ff6b6b;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .container {
            max-width: 700px;
            margin: 40px auto;
            background: #1e1e1e;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.6);
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        label {
            font-size: 1.2rem;
            font-weight: bold;
            color: #ff6b6b;
        }

        input[type="text"], select {
            font-size: 1rem;
            padding: 10px;
            border: 2px solid #4ecdc4;
            border-radius: 5px;
            background: #121212;
            color: #e5e5e5;
        }

            input[type="text"]:focus, select:focus {
                outline: none;
                border-color: #1dd1a1;
            }

        button {
            background-color: #ff6b6b;
            color: #ffffff;
            font-size: 1.2rem;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

            button:hover {
                background-color: #e84141;
                transform: translateY(-2px);
            }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

            .back-link a {
                color: #38bdf8;
                font-weight: bold;
                text-decoration: none;
                padding: 8px 15px;
                border: 2px solid #38bdf8;
                border-radius: 5px;
                transition: all 0.3s ease-in-out;
            }

                .back-link a:hover {
                    background-color: #38bdf8;
                    color: #121212;
                }
    </style>
</head>
<body>

	<h1>Добавить новое оружие в каталог</h1>

    <div class="container">
        <form method="post" action="">
            <label for="name">Название оружия:</label>
            <input type="text" id="name" name="name" minlength="1" maxlength="100" required />

            <label for="description">Описание и подробности:</label>
            <input type="text" id="description" name="description" minlength="1" required />

            <label for="caliber">Калибр патронов:</label>
            <input type="text" id="caliber" name="caliber" minlength="1" required />

            <label for="hasAutomaticMode">Наличие автоматического режима:</label>
            <select id="hasAutomaticMode" name="hasAutomaticMode">
                <option value="true">Да</option>
                <option value="false">Нет</option>
            </select>

            <label for="weaponType">Тип оружия:</label>
            <input type="text" id="weaponType" name="weaponType" minlength="1" required />

            <button>Добавить</button>
        </form>
    </div>

    <div class="back-link">
        <p><a asp-page="/Weapons/Weapon_List">Перейти в каталог с оружиями</a></p>
    </div>
</body>
</html>
