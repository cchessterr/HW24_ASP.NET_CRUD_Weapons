@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WeaponCatalogRazorPagesCRUD.Pages.Weapons.Weapon_DeleteModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Удаление записи</title>
    <style>
        body {
            font-family: 'Georgia', serif;
            background-color: #121212;
            color: #e5e5e5;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            font-size: 2.8rem;
            margin: 20px 0;
            color: #ff6b6b;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        p {
            font-size: 1.2rem;
            margin: 15px 0;
            line-height: 1.8;
            text-align: center;
        }

        .container {
            max-width: 700px;
            margin: 40px auto;
            background: #1e1e1e;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.6);
        }

        form {
            text-align: center;
            margin-top: 20px;
        }

        form button {
            background-color: #ff6b6b;
            color: #ffffff;
            font-size: 1rem;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        form button:hover {
            background-color: #e84141;
            transform: translateY(-2px);
        }

        form a {
            text-decoration: none;
        }

        form input[type="button"] {
            background-color: #1dd1a1;
            color: #ffffff;
            font-size: 1rem;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        form input[type="button"]:hover {
            background-color: #10ac84;
            transform: translateY(-2px);
        }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

        .back-link a {
            color: #38bdf8;
            font-weight: bold;
            text-decoration: none;
            padding: 8px 15px;
            border: 2px solid #38bdf8;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
        }

        .back-link a:hover {
            background-color: #38bdf8;
            color: #121212;
        }
    </style>
</head>
<body>
    <h1>Удаление @Model.DeletingFirearm.Name</h1>

    <div class="container">
        <p>
            Вы действительно хотите удалить запись?
        </p>
        <!-- форма удаления -->
        <form method="post" action="">
            <!-- скрытое поле id удаляемой записи -->
            <input type="number" name="id" value="@Model.DeletingFirearm.Id" hidden />
            <!-- кнопка отправки формы -->
            <button>Удалить</button>
            <!-- кнопка отмены -->
            <a asp-page="/Weapons/Weapon_Details" asp-route-id="@Model.DeletingFirearm.Id">
                <input type="button" value="Отменить" />
            </a>
        </form>
    </div>

    <div class="back-link">
        <p><a asp-page="/Weapons/Weapon_List">Вернуться в каталог с оружиями</a></p>
    </div>
</body>
</html>
