@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WeaponCatalogRazorPagesCRUD.Pages.IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Weapon Catalog CRUD App</title>
	<style>
		body {
			font-family: 'Georgia', serif;
			background-color: #121212;
			color: #e5e5e5;
			margin: 0;
			padding: 0;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			height: 100vh;
		}

		h1 {
			font-size: 2.5rem;
			color: #ff6b6b;
			text-transform: uppercase;
			letter-spacing: 2px;
			text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
			margin-bottom: 20px;
		}

		p {
			font-size: 1.2rem;
			margin: 20px 0;
			line-height: 1.8;
		}

		a {
			display: inline-block;
			margin-top: 20px;
			padding: 10px 20px;
			background-color: #1dd1a1;
			color: #ffffff;
			text-decoration: none;
			font-weight: bold;
			border-radius: 30px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
			transition: all 0.3s ease-in-out;
		}

			a:hover {
				background-color: #10ac84;
				transform: translateY(-2px);
				box-shadow: 0 6px 8px rgba(0, 0, 0, 0.4);
			}
	</style>
</head>
<body>
	<h1>Проект-пример реализации CRUD-операций с сущность БД</h1>

	<p><a asp-page="/Weapons/Weapon_List">Перейти в каталог с оружиями</a></p>
</body>
</html>